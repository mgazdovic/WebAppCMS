@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category";
}

<h1>Category Administration</h1>

<hr />

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<hr />

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" asp-route-filter=filter asp-route-perPage=perPage method="get">
            <label> | Per Page | </label>
            <select name="perPage">
                @if (@ViewBag.perPage == null || (@ViewBag.perPage != 25 && @ViewBag.perPage != 50))
                {
                    <option value=10 selected>10</option>
                }
                else
                {
                    <option value=10>10</option>
                }
                @if (@ViewBag.perPage == 25)
                {
                    <option value=25 selected>25</option>
                }
                else
                {
                    <option value=25>25</option>
                }
                @if (@ViewBag.perPage == 50)
                {
                    <option value=50 selected>50</option>
                }
                else
                {
                    <option value=50>50</option>
                }
            </select>
            <input type="text" name="filter" value="@ViewBag.filter" />
            <input type="submit" class="btn btn-outline-secondary" value="Apply Filter">
        </form>
        @if (ViewBag.filter != null)
        {
            <div class="col-md-3">
                <a asp-action="Index" class="btn btn-outline-success">Show All</a>
            </div>
        }
    </div>
</div>

@if (Model.Count() == 0)
{
    <div class="row text-muted"> --- No records found...</div>
}
else
{
    @if (TempData["Message"] != null)
    {
        <div class="row alert-success p-md-2">
            @TempData["Message"]
        </div>
    }

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th></th>

                <th class="small text-muted align-middle">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th class="small text-muted align-middle">
                    @Html.DisplayNameFor(model => model.ModifiedAt)
                </th>
                <th class="small text-muted align-middle">
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="font-weight-bolder">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>

                    <td class="small text-muted align-middle">
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td class="small text-muted align-middle">
                        @Html.DisplayFor(modelItem => item.ModifiedAt)
                    </td>
                    <td class="small text-muted align-middle">
                        @Html.DisplayFor(modelItem => item.ModifiedBy.UserName)
                    </td>
                </tr>
            }
            <tr>
                <td class="text-muted">Page @ViewBag.page / @ViewBag.totalPageCount</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>
                    @if (ViewBag.page > 1)
                    {
                        <a asp-action="Index" asp-route-filter="@ViewBag.filter" asp-route-page="@(ViewBag.page - 1)">Previous Page</a>
                        <span> | </span>
                    }
                    @if (ViewBag.page < ViewBag.totalPageCount)
                    {
                        <a asp-action="Index" asp-route-filter="@ViewBag.filter" asp-route-page="@(ViewBag.page + 1)">Next Page</a>
                    }
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
}

<hr />
<hr />
<p>
    <a asp-controller="Home" asp-action="Index">Back to Administration</a>
</p>