
@{
    ViewData["Title"] = "Administration";
}

<hr />

<h1 class="display-4 text-center text-muted">Content Management System</h1>

<hr />

<h1 class="text-center">Administration</h1>
<hr />

<div class="row">
    <div class="col-md-3 text-center">

        <form asp-area="Admin" asp-controller="Product" asp-action="Index">
            <input type="submit" value="PRODUCT" class="btn-primary font-weight-bold p-2 rounded w-100" />
        </form>

        <p class="small text-muted">@ViewBag.ProductRecordCount record(s)</p>
        @if (ViewBag.ProductLastModified != null && ViewBag.ProductLastModified.ModifiedBy != null)
        {
            <p class="small text-muted">Last modified <b>@ViewBag.ProductLastModified.ModifiedAt</b><br /> by user <b>@ViewBag.ProductLastModified.ModifiedBy.UserName</b></p>
        }
    </div>
    <div class="col-md-3 text-center">

        <form asp-area="Admin" asp-controller="Category" asp-action="Index">
