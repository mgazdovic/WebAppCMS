@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}

<h1>Product Administration</h1>

<div class="row mb-5">
    <div class="col-md-2">
        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Category
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @foreach (var item in ViewBag.Categories)
                {
                    <a class="dropdown-item" asp-action="Index" asp-route-categoryId="@item.Value">@item.Text</a>
                }
            </div>
        </div>
    </div>
    @if (ViewBag.CategoryId != null)
    {
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-outline-success">Show All</a>
        </div>
    }
</div>

<hr />

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

@if (Model.Count() == 0)
{
    <div class="row text-muted"> --- No records yet...</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                
                <th></th>

                <th class="small text-muted align-middle">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th class="small text-muted align-middle">
                    @Html.DisplayNameFor(model => model.ModifiedAt)
                </th>
                <th class="small text-muted align-middle">
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

                <td class="small text-muted align-middle">
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td class="small text-muted align-middle">
                    @Html.DisplayFor(modelItem => item.ModifiedAt)
                </td>
                <td class="small text-muted align-middle">
                    @Html.DisplayFor(modelItem => item.ModifiedBy.UserName)
                </td>
            </tr>
            }
        </tbody>
    </table>
}

<hr />
<hr />
<p>
    <a asp-controller="Home" asp-action="Index">Back</a>
</p>