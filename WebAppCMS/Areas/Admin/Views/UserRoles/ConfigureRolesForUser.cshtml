@model List<ConfigureUserRolesViewModel>

@{
    ViewData["Title"] = "Configure User Roles";
}

<h1>Configure User Roles</h1>

<hr />

<div class="row">
    <div class="col-md-4">

        <form method="post">
            <input type="hidden" name="userId" value="@ViewBag.UserId" />
            <div class="card">
                <div class="card-header">
                    <h2>@ViewBag.UserName</h2>
                </div>

                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input asp-for="@Model[i].Selected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].Selected">
                                @Model[i].RoleName
                            </label>
                        </div>
                    }

                    <div asp-validation-summary="All" class="text-danger">

                    </div>
                </div>

                <div class="card-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />

                </div>
            </div>
        </form>
    </div>
</div>

<hr />
<hr />
<p>
    <a asp-controller="User" asp-action="Index">Back to User Administration</a>
    |
    <a asp-controller="UserRoles" asp-action="Index">Back to User Role Overview</a>
</p>