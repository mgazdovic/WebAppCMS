@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "User Role Overview";
}

<h1>User Role Overview</h1>

@if (TempData["UnableToRemoveMsg"] != null)
{
    <p class="alert-warning col-md-6">@TempData["UnableToRemoveMsg"].ToString()</p>
    <hr />
}

<hr />
<a asp-controller="User" asp-action="Index" class="btn btn-primary">User Administration</a>
|
<a asp-controller="Role" asp-action="Index" class="btn btn-primary">Role Administration</a>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@String.Join(" | ", user.Roles)</td>
                <td>
                    <a asp-action="ConfigureRolesForUser" asp-route-id="@user.Id">Configure</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<hr />
<hr />
<p>
    <a asp-controller="User" asp-action="Index">Back to User Administration</a>
</p>